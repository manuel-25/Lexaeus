<%- include("../partials/head") %>
<body>
    <%- include("../partials/header.ejs") %>
        <main>
            <section>

                <% if (products) { %>
                    <article class="secimag">
                        <img src="/img/products/<%= products.img %>" alt="Imagen del Producto" class="imagenprod">
                    </article>
                    <article class="detallescompra">
                        <section class="titulo">
                            <p> <%= products.name %> </p>
                        </section>
                        <section class="precio">
                            <p> <%= products.price %>$ </p>
                        </section>

                        <section class="combos">
                            <p class="txtdetallecompra">Talle</p>
                            <select name="talle" class="comboestilo">
                                <% products.size.forEach(e => { %>
                                    <option value="<%= e %>"><%= e %></option>
                               <% }) %> 
                            </select>
                        </section>
                        <section class="combos">
                            <p class="txtdetallecompra">Color</p>
                            <select name="color" class="comboestilo">
                                <option value="<%= products.color %> "><%= products.color %> </option>
                            </select>
                        </section>
                        <section class="combos">
                            <p class="txtdetallecompra">Cantidad</p>
                            <select name="cantidad" class="comboestilo">
                                <% for(let i = 1; i <= products.stock; i++) { %>
                                    <option value="<%= i %>"><%= i %></option>
                               <% } %> 
                            </select>
                        </section>
                        <form class="frmbotoncarrito" type="post">
                            <button type="submit" class="boton"><a class="a-productdetail" href="/products/cart">Agregar al Carrito</a></button>
                        </form>
                    </article>
            </section>
            <h3>Descripcion</h3>
            <p class="descripcion">
                <%= products.description %>
            </p>
            <% } else {%>
                <section class="titulo">
                    <p>Error, producto no encontrado</p>
                </section>
            <% } %>
                <h2>Te puede Interesar</h2>
                    <section class="tepuedeinteresar">
                        <article>
                            <img src="/img/products/imagen_2.jpg" alt="Producto2" class="artimg">
                            <p class="arttxt">$9999.99</p>
                        </article>

                        <article>
                            <img src="/img/products/imagen_3.jpg" alt="Producto3" class="artimg">
                            <p class="arttxt">$9999.99</p>
                        </article>

                        <article>
                            <img src="/img/products/imagen_4.jpg" alt="Producto4" class="artimg">
                            <p class="arttxt">$9999.99</p>
                        </article>
                    </section>
        </main>
        <%- include("../partials/footer.ejs") %>
</body>

</html>